<h1><%= @event.name %></h1>

<% if @registration.errors.any? %>
  <ul>
    <% @registration.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @registration, :url => update_step3_event_registration_path(@event, @registration) do |f| %>

  <div class="form-group">
    <%= f.label :description, "备注", :class => "control-label" %>
    <%= f.text_area :description, :class => "form-control", :required => true %>
    <div class="help-block with-errors"></div>
  </div>

  <div class="form-group">
    <%= link_to "上一步", step2_event_registration_path(@event, @registration), :class => "btn btn-default" %>
    <%= f.submit "保存", :class => "btn btn-primary" %>
  </div>

<% end %>

<script>
  $("form").validator();
</script>
